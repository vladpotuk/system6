<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Copy Application" Height="300" Width="400">
    <Grid>
        <TextBox Name="SourceTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Content="Browse" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="BrowseSource_Click"/>

        <TextBox Name="DestinationTextBox" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Content="Browse" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" Width="75" Click="BrowseDestination_Click"/>

        <Label Content="Number of Threads:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ThreadsTextBox" HorizontalAlignment="Left" Height="23" Margin="120,70,0,0" VerticalAlignment="Top" Width="50"/>

        <Button Content="Start" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="75" Click="StartCopy_Click"/>

        <ProgressBar Name="ProgressBar" HorizontalAlignment="Left" Height="23" Margin="10,130,0,0" VerticalAlignment="Top" Width="360"/>
        <TextBlock Name="ProgressTextBlock" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Width="360"/>
    </Grid>
</Window>
