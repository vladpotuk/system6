<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Power Calculator" Height="200" Width="400">
    <Grid>
        <Label Content="Enter a number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NumberTextBox" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Enter the power:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="PowerTextBox" HorizontalAlignment="Left" Height="23" Margin="120,40,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="Calculate" HorizontalAlignment="Left" Margin="250,25,0,0" VerticalAlignment="Top" Width="100" Click="CalculateButton_Click"/>

        <ProgressBar Name="ProgressBar" HorizontalAlignment="Left" Height="23" Margin="10,70,0,0" VerticalAlignment="Top" Width="360"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="360"/>
    </Grid>
</Window>
