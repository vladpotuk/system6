<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Factorial Calculator" Height="200" Width="400">
    <Grid>
        <Label Content="Enter a number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NumberTextBox" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top" Width="100" Click="CalculateButton_Click"/>
        <ProgressBar Name="ProgressBar" HorizontalAlignment="Left" Height="23" Margin="10,50,0,0" VerticalAlignment="Top" Width="360"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="360"/>
    </Grid>
</Window>
