<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Analysis" Height="300" Width="400">
    <Grid>
        <Label Content="Enter text:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextInput" HorizontalAlignment="Left" Height="100" Margin="10,40,0,0" VerticalAlignment="Top" Width="360" AcceptsReturn="True" TextWrapping="Wrap"/>

        <Button Content="Analyze" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="100" Click="AnalyzeButton_Click"/>

        <TextBlock Name="VowelsTextBlock" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="360"/>
        <TextBlock Name="ConsonantsTextBlock" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Width="360"/>
        <TextBlock Name="SymbolsTextBlock" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Width="360"/>
    </Grid>
</Window>
