<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfApp1" Height="450" Width="800">
    <Grid>
        <TextBox Name="OutputTextBox" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Start Threads" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="120" Click="StartThreads_Click"/>
        <Button Content="Stop Threads" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="120" Click="StopThreads_Click"/>
    </Grid>
</Window>
